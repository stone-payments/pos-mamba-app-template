{
  "extends": "@mamba/configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    /**
     * Customize you paths
     */
    "paths": {
      "@/*": [
        "*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@c/*": [
        "components/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    }
  },
  "include": [
    "src",
    "tests/**/*",
  ],
}